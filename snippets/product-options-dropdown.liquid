{% unless product.options.size == 1 and product.variants[0].title == 'Default Title' %}
  {% for option in product.options_with_values %}
    {% assign option_index = forloop.index0 %}
    {%- capture option_id -%}
      single-option-{{ form_id }}-{{ option_index }}
    {%- endcapture -%}

    <div class="selector-wrapper js-required">
      <div class="select-wrapper">
        <label
          class="selected-text"
          for="{{ option_id }}"
          data-select-text>
          Jewelbots <strong><span data-selected-option></span></strong><!-- site.js ll: 1206 -->
        </label>
        <select onchange="update_variant();"
          class="single-option-selector"
          id="variant_options">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}">
              {{ variant.title }}
            </option>
          {% endfor %}
        </select>
      </div>
    </div>
  {% endfor %}
{% endunless %}


<script>
  function update_variant(){
    $('.checkout-link').attr('href', 'http://jewelbots.com/cart/' + $('#variant_options option:selected').val() + ':1');
    $(".selected-text").text($('#variant_options option:selected').text());
  };

  var urlParams;
  (window.onpopstate = function () {
      var match,
          pl     = /\+/g,  // Regex for replacing addition symbol with a space
          search = /([^&=]+)=?([^&]*)/g,
          decode = function (s) { return decodeURIComponent(s.replace(pl, " ")); },
          query  = window.location.search.substring(1);

      urlParams = {};
      while (match = search.exec(query))
         urlParams[decode(match[1])] = decode(match[2]);
  })();

$(function(){
  var param = urlParams["variant"];
  if(param > "")
  $('#variant_options').val(urlParams["variant"]);
  else
  update_variant();
});


