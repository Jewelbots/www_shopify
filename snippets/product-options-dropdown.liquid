{% unless product.options.size == 1 and product.variants[0].title == 'Default Title' %}
  {% for option in product.options_with_values %}
    {% assign option_index = forloop.index0 %}
    {%- capture option_id -%}
      single-option-{{ form_id }}-{{ option_index }}
    {%- endcapture -%}

    <div class="selector-wrapper js-required">
      <div class="select-wrapper">
        <label
          class="selected-text"
          for="{{ option_id }}"
          data-select-text>
          Jewelbots <strong><span data-selected-option></span>-Pack</strong><!-- site.js ll: 1206 -->
        </label>
        <select onchange="update_variant();"
          class="single-option-selector"
          id="{{ option_id }}"
          data-option-select="{{ form_id }}"
          data-option-index="{{ option_index }}">
          {% for value in option.values %}
            <option
              value="{{ value | escape }}"
              {% if option.selected_value == value %}selected="selected"{% endif %}>
              Jewelbots {{ value | remove: "+" }}-Pack
            </option>
          {% endfor %}
        </select>
      </div>
    </div>
  {% endfor %}
{% endunless %}

<br /><br /><br /><br />
<!-- this replaces the original quantity selector and is updated with the variant above -->
<select id="quantity" name="quantity" style="display: none;">
  {% for i in (1..3) %}
    <option value="{{ i }}"{% if item.quantity == 1 %} selected{% endif %}>Jewelbots {{ i }}-Pack</option>
  {% endfor %}
</select>

<script>
  function update_variant(){
    var packsize = $('.single-option-selector').val()
    var element = document.getElementById('quantity');
    if(packsize=='1+'){
      element.value = 1;
    }
    if(packsize=='2+'){
      element.value = 2;
    }
    if(packsize=='3+'){
      element.value = 3;
    }
  };
</script>