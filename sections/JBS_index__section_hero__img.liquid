<!-- INFO: each module is independent (styles, schemas, and scripts are contained within the module so it can be called as needed)-->

{% if section.settings.hero_enabled %}
	<!-- section_hero  ⬇ -->
	<div class="section_hero{% if section.settings.hero_size %} tall{% endif %}">
		{% if section.settings.content_headline != blank %}
			<h1>Code like a Girl</h1>

		{% endif %}
		{% if section.settings.content_subheadline != blank %}
			<p>{{ section.settings.content_subheadline }}</p>
		{% endif %}
		{% if section.settings.cta_copy != blank %}
			<a class="cta" href="{{ section.settings.cta_link }}" target="_self" title="{{ section.settings.cta_copy }}">{{ section.settings.cta_copy }}</a>
		{% endif %}
		{% if section.settings.cta_note != blank %}
			<p class="small">
				{{ section.settings.cta_note }}
				<br />
				<i class="{{ section.settings.cta_note_icon }}"></i>
			</p>
		{% endif %}
		<div class="background_color"></div>
		<div class="test_A background_image"></div>

		<div class="test_B background_image"></div>
	</div>
	<!-- section_hero  ⬆ -->

	<style>
		.section_hero {
			display:          block;
			position:         relative;
			width:            100%;
			height:           100%;
			min-height:       500px;
			margin:           0 0 0 0;
			padding:          160px 0 0 0;
			background-color: rgba(80,215,235,1.0);
/*
			 -webkit-border-top-left-radius: 25px;
			-webkit-border-top-right-radius: 25px;
				 -moz-border-radius-topleft: 25px;
				-moz-border-radius-topright: 25px;
					 border-top-left-radius: 25px;
					border-top-right-radius: 25px;
*/
			font-family:       "museo-sans", sans-serif;
			font-style:        normal;
			letter-spacing:    0px;
			text-indent:       0;
			text-transform:    none;
			text-align:        center;
			color:             rgb(255,255,255);

			overflow:          hidden;
		}
		.section_hero.tall {
			padding:          360px 0 0 0;
		}
		.section_hero .background_color {
			display:          block;
			position:         absolute;
			width:            100%;
			height:           100%;
			left:             0px;
			top:              0px;
			right:            0px;
			bottom:           0px;
			margin:           0 0 0 0;
			padding:          0 0 0 0;
			background-color: {{ section.settings.background_color }};

			opacity:          {{ section.settings.background_opacity }};
			z-index:          2;
		}
		.section_hero .background_image {
			display:          block;
			position:         absolute;
			width:            100%;
			height:           100%;
			left:             0px;
			top:              0px;
			right:            0px;
			bottom:           0px;
			margin:           0 0 0 0;
			padding:          0 0 0 0;
//			background:       url( {{ section.settings.background_image | img_url: '1400x1400', format: 'pjpg', scale: 2 }} ) no-repeat top center;

			-webkit-background-size: cover;
		       -moz-background-size: cover;
			     -o-background-size: cover;
			        background-size: cover;

			-webkit-filter: blur({{ section.settings.background_image_blurr }});
			   -moz-filter: blur({{ section.settings.background_image_blurr }});
			     -o-filter: blur({{ section.settings.background_image_blurr }});
			    -ms-filter: blur({{ section.settings.background_image_blurr }});
			        filter: blur({{ section.settings.background_image_blurr }});

			z-index:          1;
		}
		.section_hero .background_image.test_A {
		background: url({{ 'HeroB.jpg'  | asset_url }}) no-repeat top center;
		}


    .section_hero .background_image.test_B {
			background: url( {{ 'HeroA.jpg' | asset_url }} ) no-repeat top center;
			}

		.section_hero h1 {
			display:          block;
			position:         relative;
			width:            auto;
			height:           auto;
			margin:           0 0 0 0;
			padding:          0px 20px 0px 20px;

			font-family:      "museo-sans-rounded",sans-serif;
			font-style:       normal;
			font-weight:      700;
			font-size:        50px;
			line-height:      50px;
			letter-spacing:   1px;
			text-indent:      0;
			text-transform:   uppercase;
			text-align:       center;
			color:            rgba(255,255,255,1.0);

			text-shadow:      0px 1px 2px rgba(0,0,0,0.5);

			z-index:          3;
		}
		.section_hero p {
			display:          block;
			position:         relative;
			width:            auto;
			height:           auto;
			max-width:        800px;
			margin:           0 auto 0 auto;
			padding:          20px 35px 0 35px;

			font-family:      "museo-sans", sans-serif;
			font-style:       normal;
			font-weight:      300;
			font-size:        20px;
			line-height:      25px;
			letter-spacing:   0;
			text-indent:      0;
			text-transform:   none;
			text-align:       center;
			color:            rgba(255,255,255,1.0);

			text-shadow:      0px 1px 2px rgba(0,0,0,0.5);

			z-index:          4;
		}

		.section_hero a.cta {
			display:          inline-block;
			position:         relative;
			width:            auto;
			min-width:        200px;
			height:           auto;
			margin:           40px auto 180px auto;
			padding:          20px 30px 20px 30px;
			border: solid 2px rgb(255,255,255);
			background-color: rgba(255,255,255,0.0);

			-webkit-border-radius: 5px;
			   -moz-border-radius: 5px;
			        border-radius: 5px;

			-webkit-transition: .2s ease-in-out;
			   -moz-transition: .2s ease-in-out;
			     -o-transition: .2s ease-in-out;
			    -ms-transition: .2s ease-in-out;
			        transition: .2s ease-in-out;

			font-family:      "museo-sans", sans-serif;
			font-style:       normal;
			font-weight:      500;
			font-size:        20px;
			line-height:      20px;
			letter-spacing:   1px;
			text-indent:      0;
			text-transform:   uppercase;
			text-align:       center;
			color:            rgba(255,255,255,1.0);

			z-index:          5;
		}
		.section_hero a.cta:hover {
			background-color: rgba(255,255,255,1.0);

			font-weight:      700;
			color:            rgba(255,60,0,0.6);
		}
		.section_hero p.small {
			display:          block;
			position:         absolute;
			width:            300px;
			height:           auto;
			left:             50%;
			bottom:           50px;
			margin:           0 0 0 -150px;
			padding:          0 0 0 0;

			font-weight:      100;
			font-size:        12px;
			line-height:      16px;
		}
		.section_hero p.small i {
			display: inline-block;
			margin: 5px 0 0 0;
			color: rgba(255,255,255,1.0);
		    font-size: 30px;
		}


		@media (max-width: 1023px) {}
		@media (max-width: 767px) {
			.section_hero {
				 -webkit-border-top-left-radius: 0;
				-webkit-border-top-right-radius: 0;
					 -moz-border-radius-topleft: 0;
					-moz-border-radius-topright: 0;
						 border-top-left-radius: 00
						border-top-right-radius: 25px;
			}
			.section_hero h1 {
				display:     block;
				position:    relative;
				width:       auto;
				height:      auto;
				margin:      0 0 0 0;
				padding:     0 10px 10px 10px;

				font-size:   36px;
				line-height: 40px;
			}
			.section_hero a.cta_join {
				max-width:   260px;
				padding:     15px 20px 15px 20px;
			}
		}
	</style>
{% endif %}

{% schema %}
{
  "name": "HERO",
  "settings": [
	{
		"type":    "header",
		"content": "HERO SETTINGS"
	},
	{
		"type":    "paragraph",
		"content": "Customize the look and feel of your hero."
	},
	{
		"type":    "checkbox",
 		"id":      "hero_enabled",
		"label":   "Enable hero?",
		"default":  true
    },
	{
		"type":    "checkbox",
 		"id":      "hero_size",
		"label":   "Use a tall hero?",
		"default":  false
    },
	{
		"type":    "color",
		"id":      "background_color",
		"label":   "Overlay Color",
		"default": "#14143C"
	},
	{
		"type":  "select",
		"id":    "background_opacity",
		"label": "Overlay Opacity",
		"options": [
			{
				"value": "0.0",
				"label": "0%"
			},
			{
				"value": "0.1",
				"label": "10%"
			},
			{
				"value": "0.2",
				"label": "20%"
			},
			{
				"value": "0.3",
				"label": "30%"
			},
			{
				"value": "0.4",
				"label": "40%"
			},
			{
				"value": "0.5",
				"label": "50%"
			},
			{
				"value": "0.6",
				"label": "60%"
			},
			{
				"value": "0.7",
				"label": "70%"
			},
			{
				"value": "0.8",
				"label": "80%"
			},
			{
				"value": "0.9",
				"label": "90%"
			},
			{
				"value": "1.0",
				"label": "100%"
			}
		],
		"default": "0.4"
	},
	{
		"type":  "image_picker",
		"id":    "background_image",
		"label": "Background Image"
	},
	{
		"type":  "select",
		"id":    "background_image_blurr",
		"label": "Background Image Blurr",
		"options": [
			{
				"value": "0px",
				"label": "0px"
			},
			{
				"value": "5px",
				"label": "5px - recommended"
			},
			{
				"value": "10px",
				"label": "10px"
			},
			{
				"value": "20px",
				"label": "20px"
			}
		],
		"default": "5px"
	},
	{
		"type":    "header",
		"content": "HERO CONTENT"
	},
	{
	   "type":        "text",
	   "id":          "content_headline",
	   "label":       "Headline",
	   "default":     "Headline copy here",
	   "placeholder": "Add copy or leave blank"
	},
	{
	   "type":        "textarea",
	   "id":          "content_subheadline",
	   "label":       "Sub-headline",
	   "default":     "Add some copy for your sub-headline here or leave blank!",
	   "placeholder": "Add copy or leave blank"
	},
	{
		"type":    "header",
		"content": "HERO CTA"
	},
	{
		"type":        "text",
		"id":          "cta_copy",
		"label":       "CTA",
		"default":     "Learn More",
		"placeholder": "Add copy or leave blank"
	},
	{
		"type":  "text",
		"id":    "cta_link",
		"label": "CTA link",
		"info":  "#anchor / htt://... / etc."
	},
	{
		"type":    "header",
		"content": "HERO ADDITIONAL NOTE"
	},
	{
		"type":        "text",
		"id":          "cta_note",
		"label":       "Note",
 		"default":     "To learn more please <br /> scroll down.",
		"placeholder": "Add copy or leave blank"
	},
	{
		"type": "text",
		"id": "cta_note_icon",
		"label": "Icon name",
		"default": "ion-arrow-down-c",
		"info": "[Click here](http:\/\/ionicons.com\/) to view the list of available icons. Example: bluetooth"
	}
  ]
}
{% endschema %}
